@model Fitness_Manager.Models.Client
@{
    Layout = null;
    ViewData["Title"] = "Mon Profil";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - FITNESS MANAGER</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, rgba(26, 26, 46, 0.95) 0%, rgba(22, 33, 62, 0.95) 100%),
                        url('/images/fitness_profile_1766249133561.png') center/cover fixed;
            padding-top: 80px;
        }

        /* Navbar */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            padding: 20px 50px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(10, 10, 10, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(212, 175, 55, 0.2);
            z-index: 1000;
        }

        .brand {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .brand i {
            font-size: 28px;
            color: #D4AF37;
        }

        .brand-name {
            font-size: 24px;
            font-weight: 700;
            color: #fff;
            letter-spacing: 2px;
        }

        .nav-links {
            display: flex;
            gap: 35px;
        }

        .nav-links a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .nav-links a:hover, .nav-links a.active {
            color: #D4AF37;
        }

        .back-btn {
            background: rgba(212, 175, 55, 0.1);
            border: 1px solid rgba(212, 175, 55, 0.3);
            color: #D4AF37;
            padding: 10px 20px;
            border-radius: 10px;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background: rgba(212, 175, 55, 0.2);
            transform: translateY(-2px);
        }

        /* Container */
        .container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .page-header {
            text-align: center;
            margin-bottom: 50px;
        }

        .page-title {
            font-size: 42px;
            font-weight: 700;
            color: #fff;
            margin-bottom: 10px;
        }

        .page-subtitle {
            color: rgba(255, 255, 255, 0.6);
            font-size: 16px;
        }

        /* Success Alert */
        .alert {
            padding: 15px 20px;
            border-radius: 12px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .alert-success {
            background: rgba(40, 167, 69, 0.2);
            border: 1px solid rgba(40, 167, 69, 0.4);
            color: #28a745;
        }

        .alert i {
            font-size: 20px;
        }

        /* Profile Card */
        .profile-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 30px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 25px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group.full-width {
            grid-column: 1 / -1;
        }

        .form-label {
            display: block;
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 10px;
            font-weight: 500;
            font-size: 14px;
        }

        .form-control {
            width: 100%;
            padding: 14px 18px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            color: #fff;
            font-size: 15px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: #D4AF37;
            background: rgba(255, 255, 255, 0.08);
            box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
        }

        /* Style pour les options du select */
        .form-control option {
            background: #1a1a2e;
            color: #fff;
            padding: 10px;
        }

        .form-control option:hover {
            background: #D4AF37;
            color: #1a1a2e;
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-top: 30px;
        }

        .stat-card {
            background: linear-gradient(135deg, rgba(212, 175, 55, 0.1) 0%, rgba(212, 175, 55, 0.05) 100%);
            border: 1px solid rgba(212, 175, 55, 0.2);
            border-radius: 15px;
            padding: 25px;
            text-align: center;
        }

        .stat-icon {
            font-size: 32px;
            color: #D4AF37;
            margin-bottom: 15px;
        }

        .stat-value {
            font-size: 28px;
            font-weight: 700;
            color: #fff;
            margin-bottom: 5px;
        }

        .stat-label {
            font-size: 13px;
            color: rgba(255, 255, 255, 0.6);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #D4AF37 0%, #b8941f 100%);
            border: none;
            border-radius: 12px;
            color: #1a1a2e;
            padding: 16px 40px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(212, 175, 55, 0.4);
        }

        @@media (max-width: 768px) {
            .form-grid, .stats-grid {
                grid-template-columns: 1fr;
            }

            .navbar {
                flex-direction: column;
                gap: 15px;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="brand">
            <i class="fas fa-dumbbell"></i>
            <span class="brand-name">FITNESS MANAGER</span>
        </div>

        <div class="nav-links">
            <a href="/Client/Dashboard"><i class="fas fa-home"></i> Dashboard</a>
            <a href="/Client/Profile" class="active"><i class="fas fa-user"></i> Mon Profil</a>
            <a href="/Client/WorkoutPlan"><i class="fas fa-running"></i> Plan Sportif</a>
            <a href="/Client/NutritionPlan"><i class="fas fa-utensils"></i> Nutrition</a>
            <a href="/Client/Progress"><i class="fas fa-chart-line"></i> Progression</a>
        </div>

        <a href="/Client/Dashboard" class="back-btn">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </nav>

    <div class="container">
        <div class="page-header">
            <h1 class="page-title">Mon Profil</h1>
            <p class="page-subtitle">Gérez vos informations personnelles et définissez vos objectifs</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <span>@TempData["Success"]</span>
            </div>
        }

        <div class="profile-card">
            <form method="post" action="/Client/UpdateProfile">
                @Html.AntiForgeryToken()

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Prénom</label>
                        <input type="text" name="prenom" class="form-control" 
                               value="@Model?.Prenom" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Nom</label>
                        <input type="text" name="nom" class="form-control" 
                               value="@Model?.Nom" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" 
                               value="@Model?.Email" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Sexe</label>
                        <select name="sexe" class="form-control">
                            <option value="">Sélectionner</option>
                            @if (Model?.Sexe != "Homme")
                            {
                                <option value="Homme">Homme</option>
                            }
                            @if (Model?.Sexe != "Femme")
                            {
                                <option value="Femme">Femme</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Poids (kg)</label>
                        <input type="number" step="0.1" name="poids" class="form-control" 
                               value="@Model?.Poids" placeholder="70.5">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Taille (cm)</label>
                        <input type="number" name="taille" class="form-control" 
                               value="@Model?.Taille" placeholder="175">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Âge</label>
                        <input type="number" name="age" class="form-control" 
                               value="@Model?.Age" placeholder="25">
                    </div>

                    <div class="form-group full-width">
                        <label class="form-label">Objectif</label>
                        <select name="objectif" class="form-control">
                            <option value="">Sélectionner votre objectif</option>
                            <option value="Perte de poids" selected="@(Model?.Objectif == "Perte de poids")">Perte de poids</option>
                            <option value="Prise de masse" selected="@(Model?.Objectif == "Prise de masse")">Prise de masse musculaire</option>
                            <option value="Maintien" selected="@(Model?.Objectif == "Maintien")">Maintien de la forme</option>
                            <option value="Endurance" selected="@(Model?.Objectif == "Endurance")">Amélioration de l'endurance</option>
                        </select>
                    </div>
                </div>

                @{
                    // Calcul de l'IMC
                    decimal? imc = null;
                    if (Model?.Poids.HasValue == true && Model?.Taille.HasValue == true && Model.Taille > 0)
                    {
                        var tailleEnMetres = Model.Taille.Value / 100m;
                        imc = Model.Poids.Value / (tailleEnMetres * tailleEnMetres);
                    }

                    // Calcul des calories journalières (Formule de Harris-Benedict révisée)
                    decimal? calories = null;
                    if (Model?.Poids.HasValue == true && Model?.Taille.HasValue == true && Model?.Age.HasValue == true && !string.IsNullOrEmpty(Model?.Sexe))
                    {
                        if (Model.Sexe == "Homme")
                        {
                            // Homme: 88.362 + (13.397 × poids en kg) + (4.799 × taille en cm) - (5.677 × âge en années)
                            calories = 88.362m + (13.397m * Model.Poids.Value) + (4.799m * Model.Taille.Value) - (5.677m * Model.Age.Value);
                        }
                        else if (Model.Sexe == "Femme")
                        {
                            // Femme: 447.593 + (9.247 × poids en kg) + (3.098 × taille en cm) - (4.330 × âge en années)
                            calories = 447.593m + (9.247m * Model.Poids.Value) + (3.098m * Model.Taille.Value) - (4.330m * Model.Age.Value);
                        }
                        
                        // Ajustement selon le niveau d'activité (sédentaire par défaut)
                        calories = calories * 1.2m;
                    }
                }

                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-weight"></i>
                        </div>
                        <div class="stat-value">@(imc.HasValue ? imc.Value.ToString("F1") : "--")</div>
                        <div class="stat-label">IMC</div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-fire"></i>
                        </div>
                        <div class="stat-value">@(calories.HasValue ? calories.Value.ToString("F0") : "--")</div>
                        <div class="stat-label">Calories/jour</div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-bullseye"></i>
                        </div>
                        <div class="stat-value">@(string.IsNullOrEmpty(Model?.Objectif) ? "--" : Model.Objectif)</div>
                        <div class="stat-label">Objectif</div>
                    </div>
                </div>

                <div style="text-align: center; margin-top: 40px;">
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-save"></i> Enregistrer les modifications
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
