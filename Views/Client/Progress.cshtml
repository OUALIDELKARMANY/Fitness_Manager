@model Fitness_Manager.Models.Client
@{
    Layout = null;
    ViewData["Title"] = "Ma Progression";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - FITNESS MANAGER</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, rgba(26, 26, 46, 0.95) 0%, rgba(22, 33, 62, 0.95) 100%),
                        url('/images/fitness_progress_1766249198086.png') center/cover fixed;
            padding-top: 80px;
            color: #fff;
        }
        .navbar {
            position: fixed; top: 0; left: 0; right: 0;
            padding: 20px 50px;
            display: flex; justify-content: space-between; align-items: center;
            background: rgba(10, 10, 10, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(212, 175, 55, 0.2);
            z-index: 1000;
        }
        .brand { display: flex; align-items: center; gap: 12px; }
        .brand i { font-size: 28px; color: #D4AF37; }
        .brand-name { font-size: 24px; font-weight: 700; color: #fff; letter-spacing: 2px; }
        .nav-links { display: flex; gap: 35px; }
        .nav-links a { color: rgba(255, 255, 255, 0.8); text-decoration: none; font-weight: 500; transition: all 0.3s ease; }
        .nav-links a:hover, .nav-links a.active { color: #D4AF37; }
        .back-btn {
            background: rgba(212, 175, 55, 0.1);
            border: 1px solid rgba(212, 175, 55, 0.3);
            color: #D4AF37;
            padding: 10px 20px;
            border-radius: 10px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
        .back-btn:hover { background: rgba(212, 175, 55, 0.2); }
        .container { max-width: 1200px; margin: 40px auto; padding: 0 20px 40px; }
        .page-header { text-align: center; margin-bottom: 50px; }
        .page-title { font-size: 42px; font-weight: 700; margin-bottom: 10px; }
        .page-subtitle { color: rgba(255, 255, 255, 0.6); font-size: 16px; }
        .stats-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin-bottom: 40px; }
        .stat-card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 25px;
            text-align: center;
        }
        .stat-icon { font-size: 32px; color: #D4AF37; margin-bottom: 15px; }
        .stat-value { font-size: 28px; font-weight: 700; margin-bottom: 5px; }
        .stat-label { font-size: 13px; color: rgba(255, 255, 255, 0.6); text-transform: uppercase; }
        .info-card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
        }
        .info-title { font-size: 20px; font-weight: 600; margin-bottom: 25px; color: #D4AF37; }
        .info-content { line-height: 1.8; color: rgba(255, 255, 255, 0.8); }
        .info-content strong { color: #D4AF37; }
        @@media (max-width: 768px) {
            .stats-grid { grid-template-columns: 1fr; }
            .navbar { flex-direction: column; gap: 15px; }
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="brand">
            <i class="fas fa-dumbbell"></i>
            <span class="brand-name">FITNESS MANAGER</span>
        </div>
        <div class="nav-links">
            <a href="/Client/Dashboard"><i class="fas fa-home"></i> Dashboard</a>
            <a href="/Client/Profile"><i class="fas fa-user"></i> Mon Profil</a>
            <a href="/Client/WorkoutPlan"><i class="fas fa-running"></i> Plan Sportif</a>
            <a href="/Client/NutritionPlan"><i class="fas fa-utensils"></i> Nutrition</a>
            <a href="/Client/Progress" class="active"><i class="fas fa-chart-line"></i> Progression</a>
        </div>
        <a href="/Client/Dashboard" class="back-btn">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </nav>

    <div class="container">
        <div class="page-header">
            <h1 class="page-title">Ma Progression</h1>
            <p class="page-subtitle">Visualisez votre évolution et vos statistiques</p>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon"><i class="fas fa-weight"></i></div>
                <div class="stat-value">@(ViewBag.PoidsActuel != null ? ((decimal)ViewBag.PoidsActuel).ToString("F1") + " kg" : "--")</div>
                <div class="stat-label">Poids Actuel</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon"><i class="fas fa-chart-line"></i></div>
                <div class="stat-value">--</div>
                <div class="stat-label">Variation</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon"><i class="fas fa-weight-scale"></i></div>
                <div class="stat-value">--</div>
                <div class="stat-label">IMC</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon"><i class="fas fa-dumbbell"></i></div>
                <div class="stat-value">@(ViewBag.NombreSeances ?? 0)</div>
                <div class="stat-label">Séances au plan</div>
            </div>
        </div>

        <div class="info-card">
            <h3 class="info-title"><i class="fas fa-info-circle"></i> Résumé de votre progression</h3>
            <div class="info-content">
                <p>
                    <strong>Poids actuel :</strong> @(Model?.Poids?.ToString("F1") ?? "--") kg<br>
                    <strong>Objectif :</strong> @(Model?.Objectif ?? "Non défini")<br>
                    <strong>Plan sportif :</strong> @(Model?.PlanSportif?.Nom ?? "Aucun")
                </p>
            </div>
        </div>
    </div>
</body>
</html>
