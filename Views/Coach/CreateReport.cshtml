@{
    ViewData["Title"] = "Créer un Rapport";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/coach-dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo-section">
                <i class="fas fa-dumbbell"></i>
                <h2>Fitness Manager</h2>
            </div>
            
            <nav class="nav-menu">
                <a href="@Url.Action("Dashboard", "Coach")" class="nav-item">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="@Url.Action("Clients", "Coach")" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Clients</span>
                </a>
                <a href="@Url.Action("WorkoutPlans", "Coach")" class="nav-item">
                    <i class="fas fa-running"></i>
                    <span>Plans d'Entraînement</span>
                </a>
                <a href="@Url.Action("NutritionPlans", "Coach")" class="nav-item">
                    <i class="fas fa-apple-alt"></i>
                    <span>Plans Nutritionnels</span>
                </a>
                <a href="@Url.Action("Reports", "Coach")" class="nav-item active">
                    <i class="fas fa-chart-line"></i>
                    <span>Rapports</span>
                </a>
            </nav>
            
            <div class="sidebar-footer">
                <a href="@Url.Action("Logout", "Account")" class="nav-item">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Déconnexion</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="dashboard-header">
                <div class="header-content">
                    <div>
                        <a href="@Url.Action("Reports", "Coach")" class="btn-back">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        <h1>Créer un Rapport</h1>
                        <p class="header-subtitle">Rapport pour @ViewBag.ClientName</p>
                    </div>
                </div>
            </header>

            <section class="form-section">
                <div class="form-container">
                    <form method="post" asp-action="CreateReport">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ClientId" value="@ViewBag.ClientId" />
                        
                        <div class="form-group">
                            <label for="Titre">
                                <i class="fas fa-heading"></i> Titre du Rapport *
                            </label>
                            <input type="text" name="Titre" id="Titre" class="form-control" placeholder="Ex: Rapport mensuel - Novembre 2024" required />
                        </div>

                        <div class="form-group">
                            <label for="Type">
                                <i class="fas fa-tag"></i> Type de Rapport
                            </label>
                            <select name="Type" id="Type" class="form-control">
                                <option value="">-- Sélectionner --</option>
                                <option value="Hebdomadaire">Hebdomadaire</option>
                                <option value="Mensuel">Mensuel</option>
                                <option value="Trimestriel">Trimestriel</option>
                                <option value="Bilan">Bilan</option>
                                <option value="Progression">Progression</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="Contenu">
                                <i class="fas fa-file-alt"></i> Contenu du Rapport *
                            </label>
                            <textarea name="Contenu" id="Contenu" class="form-control" rows="12" placeholder="Détaillez la progression, les observations, les recommandations..." required></textarea>
                            <small class="text-muted">
                                Incluez: progression des objectifs, performances, points forts, axes d'amélioration, recommandations
                            </small>
                        </div>

                        <div class="form-actions">
                            <a href="@Url.Action("Reports", "Coach")" class="btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn-primary">
                                <i class="fas fa-save"></i> Créer le Rapport
                            </button>
                        </div>
                    </form>
                </div>
            </section>
        </main>
    </div>
</body>
</html>
