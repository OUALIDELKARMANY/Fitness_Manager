@model Fitness_Manager.Models.Exercice
@{
    ViewData["Title"] = "Modifier Exercice";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/coach-dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="logo-section">
                <i class="fas fa-dumbbell"></i>
                <h2>Fitness Manager</h2>
            </div>
            <nav class="nav-menu">
                <a href="@Url.Action("Dashboard", "Coach")" class="nav-item"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="@Url.Action("Clients", "Coach")" class="nav-item"><i class="fas fa-users"></i><span>Clients</span></a>
                <a href="@Url.Action("WorkoutPlans", "Coach")" class="nav-item active"><i class="fas fa-running"></i><span>Plans d'Entraînement</span></a>
                <a href="@Url.Action("NutritionPlans", "Coach")" class="nav-item"><i class="fas fa-apple-alt"></i><span>Plans Nutritionnels</span></a>
                <a href="@Url.Action("Reports", "Coach")" class="nav-item"><i class="fas fa-chart-line"></i><span>Rapports</span></a>
            </nav>
            <div class="sidebar-footer">
                <a href="@Url.Action("Logout", "Account")" class="nav-item"><i class="fas fa-sign-out-alt"></i><span>Déconnexion</span></a>
            </div>
        </aside>

        <main class="main-content">
            <header class="dashboard-header">
                <div class="header-content">
                    <div>
                        <a href="@Url.Action("ManageExercises", "Coach", new { sessionId = ViewBag.SessionId })" class="btn-back">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        <h1>Modifier Exercice</h1>
                        <p class="header-subtitle">Mettre à jour les détails de l'exercice</p>
                    </div>
                </div>
            </header>

            <section class="form-section">
                <div class="form-container">
                    <form method="post" asp-action="EditExercise">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="SeanceId" />
                        
                        <div class="form-group">
                            <label asp-for="Nom"><i class="fas fa-running"></i> Nom de l'Exercice *</label>
                            <input asp-for="Nom" class="form-control" placeholder="Ex: Développé couché" required />
                        </div>

                        <div class="form-group">
                            <label asp-for="Description"><i class="fas fa-align-left"></i> Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Description de l'exercice..."></textarea>
                        </div>

                        <div class="form-grid">
                            <div class="form-group">
                                <label asp-for="Sets"><i class="fas fa-layer-group"></i> Séries</label>
                                <input asp-for="Sets" type="number" class="form-control" min="1" placeholder="3" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Repetitions"><i class="fas fa-redo"></i> Répétitions</label>
                                <input asp-for="Repetitions" type="number" class="form-control" min="1" placeholder="10" />
                            </div>
                            <div class="form-group">
                                <label asp-for="DureeSecondes"><i class="fas fa-clock"></i> Durée (sec)</label>
                                <input asp-for="DureeSecondes" type="number" class="form-control" min="0" placeholder="60" />
                            </div>
                            <div class="form-group">
                                <label asp-for="ReposSecondes"><i class="fas fa-pause"></i> Repos (sec)</label>
                                <input asp-for="ReposSecondes" type="number" class="form-control" min="0" placeholder="90" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Materiel"><i class="fas fa-tools"></i> Matériel Nécessaire</label>
                            <input asp-for="Materiel" class="form-control" placeholder="Ex: Haltères, banc" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Instructions"><i class="fas fa-list-ol"></i> Instructions Détaillées</label>
                            <textarea asp-for="Instructions" class="form-control" rows="5" placeholder="Instructions étape par étape..."></textarea>
                        </div>

                        <div class="form-actions">
                            <a href="@Url.Action("ManageExercises", "Coach", new { sessionId = ViewBag.SessionId })" class="btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn-primary">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </section>
        </main>
    </div>
</body>
</html>
