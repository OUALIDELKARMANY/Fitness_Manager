@model Fitness_Manager.Models.Seance
@{
    ViewData["Title"] = "Modifier Séance";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/coach-dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="logo-section">
                <i class="fas fa-dumbbell"></i>
                <h2>Fitness Manager</h2>
            </div>
            <nav class="nav-menu">
                <a href="@Url.Action("Dashboard", "Coach")" class="nav-item"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="@Url.Action("Clients", "Coach")" class="nav-item"><i class="fas fa-users"></i><span>Clients</span></a>
                <a href="@Url.Action("WorkoutPlans", "Coach")" class="nav-item active"><i class="fas fa-running"></i><span>Plans d'Entraînement</span></a>
                <a href="@Url.Action("NutritionPlans", "Coach")" class="nav-item"><i class="fas fa-apple-alt"></i><span>Plans Nutritionnels</span></a>
                <a href="@Url.Action("Reports", "Coach")" class="nav-item"><i class="fas fa-chart-line"></i><span>Rapports</span></a>
            </nav>
            <div class="sidebar-footer">
                <a href="@Url.Action("Logout", "Account")" class="nav-item"><i class="fas fa-sign-out-alt"></i><span>Déconnexion</span></a>
            </div>
        </aside>

        <main class="main-content">
            <header class="dashboard-header">
                <div class="header-content">
                    <div>
                        <a href="@Url.Action("ManageSessions", "Coach", new { planId = ViewBag.PlanId })" class="btn-back">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        <h1>Modifier Séance</h1>
                        <p class="header-subtitle">Mettre à jour les détails de la séance</p>
                    </div>
                </div>
            </header>

            <section class="form-section">
                <div class="form-container">
                    <form method="post" asp-action="EditSession">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="PlanSportifId" />
                        
                        <div class="form-group">
                            <label asp-for="Nom"><i class="fas fa-heading"></i> Nom de la Séance *</label>
                            <input asp-for="Nom" class="form-control" placeholder="Ex: Upper Body" required />
                        </div>

                        <div class="form-group">
                            <label asp-for="Description"><i class="fas fa-align-left"></i> Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Description de la séance..."></textarea>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Jour"><i class="fas fa-calendar-day"></i> Jour</label>
                                <select asp-for="Jour" class="form-control">
                                    <option value="">-- Sélectionner --</option>
                                    <option value="Lundi">Lundi</option>
                                    <option value="Mardi">Mardi</option>
                                    <option value="Mercredi">Mercredi</option>
                                    <option value="Jeudi">Jeudi</option>
                                    <option value="Vendredi">Vendredi</option>
                                    <option value="Samedi">Samedi</option>
                                    <option value="Dimanche">Dimanche</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Ordre"><i class="fas fa-sort-numeric-up"></i> Ordre</label>
                                <input asp-for="Ordre" type="number" class="form-control" min="1" placeholder="1" />
                            </div>
                            <div class="form-group">
                                <label asp-for="DureeMinutes"><i class="fas fa-clock"></i> Durée (minutes)</label>
                                <input asp-for="DureeMinutes" type="number" class="form-control" min="10" placeholder="60" />
                            </div>
                        </div>

                        <div class="form-actions">
                            <a href="@Url.Action("ManageSessions", "Coach", new { planId = ViewBag.PlanId })" class="btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn-primary">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </section>
        </main>
    </div>
</body>
</html>
