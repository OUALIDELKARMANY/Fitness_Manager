@model List<Fitness_Manager.Models.Rapport>
@{
    ViewData["Title"] = "Rapports";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/coach-dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo-section">
                <i class="fas fa-dumbbell"></i>
                <h2>Fitness Manager</h2>
            </div>
            
            <nav class="nav-menu">
                <a href="@Url.Action("Dashboard", "Coach")" class="nav-item">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="@Url.Action("Clients", "Coach")" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Clients</span>
                </a>
                <a href="@Url.Action("WorkoutPlans", "Coach")" class="nav-item">
                    <i class="fas fa-running"></i>
                    <span>Plans d'Entraînement</span>
                </a>
                <a href="@Url.Action("NutritionPlans", "Coach")" class="nav-item">
                    <i class="fas fa-apple-alt"></i>
                    <span>Plans Nutritionnels</span>
                </a>
                <a href="@Url.Action("Reports", "Coach")" class="nav-item active">
                    <i class="fas fa-chart-line"></i>
                    <span>Rapports</span>
                </a>
            </nav>
            
            <div class="sidebar-footer">
                <a href="@Url.Action("Logout", "Account")" class="nav-item">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Déconnexion</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="dashboard-header">
                <div class="header-content">
                    <div>
                        <h1>Rapports</h1>
                        <p class="header-subtitle">Consultez tous les rapports de vos clients</p>
                    </div>
                </div>
            </header>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                </div>
            }

            <section class="content-section">
                @if (Model != null && Model.Count > 0)
                {
                    <div class="reports-grid">
                        @foreach (var rapport in Model)
                        {
                            <div class="report-card">
                                <div class="report-header">
                                    <div>
                                        <h3>@rapport.Titre</h3>
                                        @if (rapport.Type != null)
                                        {
                                            <span class="badge badge-primary">@rapport.Type</span>
                                        }
                                    </div>
                                    <span class="report-date">@rapport.DateCreation.ToShortDateString()</span>
                                </div>
                                
                                <div class="report-client">
                                    <i class="fas fa-user"></i>
                                    <span>@rapport.Client.Prenom @rapport.Client.Nom</span>
                                </div>

                                @if (rapport.Contenu != null)
                                {
                                    <p class="report-preview">@(rapport.Contenu.Length > 150 ? rapport.Contenu.Substring(0, 150) + "..." : rapport.Contenu)</p>
                                }

                                <a href="@Url.Action("ViewReport", "Coach", new { id = rapport.Id })" class="btn-secondary btn-block">
                                    <i class="fas fa-eye"></i> Voir le Rapport
                                </a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-file-alt"></i>
                        <h3>Aucun rapport</h3>
                        <p>Vous n'avez pas encore créé de rapports</p>
                    </div>
                }
            </section>
        </main>
    </div>
</body>
</html>

<style>
.reports-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 1.5rem;
}

.report-card {
    background: white;
    border-radius: var(--border-radius-lg);
    padding: 1.5rem;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
}

.report-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
}

.report-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
}

.report-header h3 {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.report-date {
    color: var(--text-muted);
    font-size: 0.875rem;
}

.report-client {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    padding: 0.75rem;
    background: var(--gray-50);
    border-radius: var(--border-radius-md);
}

.report-client i {
    color: var(--primary-color);
}

.report-preview {
    color: var(--text-secondary);
    font-size: 0.875rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
}
</style>
